#if !TIMER
#define TIMER

#include "u64.ika"

#include "pit.ika"
#include "irq.ika"

#include "process.ika"

var _timer_ticks: u64;

fn _timer_cb(r: *regs_t) void {
    _timer_ticks = u64_add_u32(_timer_ticks, 1);
    proc_schedule(r);
}

fn timer_init(hz: u32) void {
    _timer_ticks.low = 0;
    _timer_ticks.high = 0;

    pit_init(hz);
    pit_install_callback(_timer_cb);
}

fn timer_ticks() u32 {
    return _timer_ticks.low;
}

fn timer_hz() u32 {
    return pit_get_frequency();
}

#endif
